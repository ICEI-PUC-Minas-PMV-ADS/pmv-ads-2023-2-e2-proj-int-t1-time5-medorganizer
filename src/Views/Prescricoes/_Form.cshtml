    <span asp-validation-for="Status" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Progresso" class="control-label"></label>
    <input asp-for="Progresso" class="form-control" />
    <span asp-validation-for="Progresso" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Medico" class="control-label"></label>
