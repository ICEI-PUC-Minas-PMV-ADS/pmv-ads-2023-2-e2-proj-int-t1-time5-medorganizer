    <span asp-validation-for="Medico" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ConsultaMedica" class="control-label">Consulta Médica</label>
    <select asp-for="ConsultaMedicaId" class="form-control" asp-items="@ViewBag.Consultas"></select>
