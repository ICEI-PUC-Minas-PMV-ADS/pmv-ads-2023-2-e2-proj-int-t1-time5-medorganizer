                                    <!--begin::Table body-->
                                    <tbody>
                                        @foreach (var consulta in Model.ConsultasMedicas)
                                        {
                                                                            <tr>
                                                <td>
                                                    <span data-kt-element="bullet" class="bullet bullet-vertical d-flex align-items-center h-40px bg-success"></span>
                                                </td>

                                                <td class="ps-0">
                                                    @consulta.DataHora
                                                </td>

                                                <td class="ps-0">
                                                    @consulta.Status
                                                </td> 

                                                <td>
                                                    <a href="#" class="text-gray-800 text-hover-primary fw-bold fs-6">@consulta.Nome</a>
